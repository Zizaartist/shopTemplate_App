<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Click.Views.User.Basket.TakeawayForm"
             Style="{StaticResource GrayContentPage}">
    <ContentPage.Content>
        <StackLayout>
            <Grid Style="{StaticResource HeaderGrid}"
                  BackgroundColor="{StaticResource WhiteColor}"
                  ColumnDefinitions="Auto,*">
                <ImageButton x:Name="Back"
                             Clicked="Back_Clicked"
                             Source="BackBlack.png"
                             Style="{StaticResource BackButton}"/>
                <Label Text="Оформление"
                       Style="{StaticResource HeaderBlackLabelBold}"
                       Margin="10,0,0,0"
                       Grid.Column="1"/>
            </Grid>
            <ScrollView Padding="0,0,0,20"
                        Margin="0">
                <Frame Style="{StaticResource CourierFrame}"
                       Padding="25,25,25,5">
                    <StackLayout Spacing="0">
                        <Label Style="{StaticResource BlackLabel}"
                               Text="Имя"/>
                        <Entry Style="{StaticResource EntryGray}"
                               Placeholder="Например Иван"/>
                        <Entry Style="{StaticResource EntryGray}"
                               Placeholder="Комментарий к заказу"
                               HeightRequest="40"/>
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="0"
                                     Margin="-25,10,-25,10"
                                     Padding="0">
                            <Button Style="{StaticResource PaymentSelected}"
                                    Text="Наличными"
                                    x:Name="Cash"
                                    Clicked="Cash_Clicked"/>
                            <Button Style="{StaticResource Payment}"
                                    Text="Картой онлайн"
                                    x:Name="CardOnline"
                                    Clicked="CardOnline_Clicked"/>
                            <Button Style="{StaticResource Payment}"
                                    Text="Картой курьеру"
                                    x:Name="Card"
                                    Clicked="Card_Clicked"/>
                        </StackLayout>
                        <Grid>
                            <Label Style="{StaticResource BlackLabel}"
                                   Text="Использовать бонусы"/>
                            <Switch BackgroundColor="AliceBlue"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    x:Name="BonusSwitch"
                                    Toggled="BonusSwitch_Toggled"
                                    IsToggled="false"
                                    OnColor="{StaticResource GreenColor}"
                                    ThumbColor="{StaticResource BackgroundColor}"/>
                        </Grid>
                        <Label Style="{StaticResource SmallBlackLabel}"
                               HorizontalTextAlignment="Start"
                               Text="Максимальный лимит использования бонусов до 30% от суммы заказа"/>
                        <StackLayout Spacing="3">
                            <Label Style="{StaticResource BlackLabel}"
                                   HorizontalTextAlignment="End"
                                   HorizontalOptions="End"
                                   Text="Итого к оплате"/>
                            <Button HeightRequest="1"
                                    BackgroundColor="Black"
                                    HorizontalOptions="End"
                                    IsVisible="{Binding Source={x:Reference BonusSwitch}, Path=IsToggled}"/>
                            <Label Style="{StaticResource SmallBlackLabelBold}"
                                       HorizontalTextAlignment="End"
                                       HorizontalOptions="End"
                                       IsVisible="{Binding Source={x:Reference BonusSwitch}, Path=IsToggled}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="10907"
                                              x:Name="PayLabel"/>
                                        <Span Text=" Р"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <StackLayout HorizontalOptions="End"
                                         Orientation="Horizontal"
                                         x:Name="BonusStack"
                                         IsVisible="{Binding Source={x:Reference BonusSwitch}, Path=IsToggled}">
                                <Label Style="{StaticResource SmallBlackLabelBold}"
                                       TextColor="{StaticResource GreenColor}"
                                       HorizontalTextAlignment="End"
                                       HorizontalOptions="End">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="- "/>
                                            <Span Text="500"
                                                  x:Name="BonusLabel"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Image Style="{StaticResource FoodTime}"
                                       Source="BonusIconGray.png"/>
                            </StackLayout>
                            <Button HeightRequest="1"
                                    BackgroundColor="Black"
                                    HorizontalOptions="End"/>
                            <Label Style="{StaticResource BlackLabel}"
                                   HorizontalTextAlignment="End"
                                   HorizontalOptions="End">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Source={x:Reference PayLabel}, Path=Text}"
                                              x:Name="SumLabel"/>
                                        <Span Text=" Р"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                        <Button Style="{StaticResource GreenButton}"
                                x:Name="Confirm"
                                Clicked="Confirm_Clicked"
                                Padding="0"
                                Text="Заказать"
                                WidthRequest="370"
                                HeightRequest="40"
                                CornerRadius="20"
                                Margin="-20,10,-20,0"/>
                    </StackLayout>
                </Frame>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>