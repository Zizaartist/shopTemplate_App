<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Click.Views.User.Food.MainFood"
             Style="{StaticResource GrayContentPage}">
    <ContentPage.Content>
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                <Grid Style="{StaticResource HeaderGrid}">
                    <ImageButton x:Name="Back"
                                 Clicked="Back_Clicked"
                                 Style="{StaticResource BackButton}"/>
                    <Label Text="Еда"
                           Style="{StaticResource WhiteHeaderLabel}"
                           Margin="10,0,0,0"
                           Grid.Column="1"/>
                    <Label Text="У Вас 0"
                           Style="{StaticResource WhiteMediumLabel}"
                           Margin="0,0,10,0"
                           Grid.Column="2"/>
                    <ImageButton x:Name="Bonus"
                                 Clicked="Bonus_Clicked"
                                 Style="{StaticResource BonusButton}"
                                 Grid.Column="3"/>
                </Grid>
                <CollectionView x:Name="AdFoodCollection"
                                ItemsSource="{Binding AdBannerFoods}"
                                SelectionMode="None"
                                HeightRequest="160"
                                Grid.Row="1">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Horizontal"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10">
                                <Frame Style="{StaticResource FoodBannerFrame}">
                                    <Grid RowDefinitions="Auto, Auto">
                                        <Image Source="{Binding Banner}"
                                               Style="{StaticResource BannerFoodImage}"/>
                                        <Label Text="{Binding Text}"
                                               Style="{StaticResource WhiteBoldLabel}"
                                               HorizontalOptions="Center"
                                               Grid.Row="1"/>
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <CollectionView x:Name="TagCollection"
                                ItemsSource="{Binding TagFoods}"
                                SelectionMode="None"
                                HeightRequest="45"
                                Grid.Row="2">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Horizontal"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid RowDefinitions="Auto">
                                <Button Text="{Binding Tag}"
                                        Style="{StaticResource TagButton}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Grid Grid.Row="3"
                      ColumnDefinitions="Auto,*,Auto"
                      HeightRequest="30"
                      Padding="10,0,10,0">
                    <Switch x:Name="Working"
                            IsToggled="{Binding IsWorkingCriteria, Mode=TwoWay}"/>
                    <Label Text="cейчас работают"
                           Style="{StaticResource GrayMediumLabel}"
                           Grid.Column="1"/>
                    <ImageButton x:Name="Find"
                                 Clicked="Find_Clicked"
                                 Style="{StaticResource SearchButton}"
                                 Grid.Column="2"/>
                </Grid>
                <RefreshView x:Name="Refreshable"
                            IsRefreshing="{Binding GetDataLock, Mode=OneWay}"
                            Command="{Binding GetInitialData}"
                            Grid.Row="4">
                    <CollectionView x:Name="OrganisationCollection"
                                ItemsSource="{Binding Brands}"
                                SelectionMode="Single"
                                SelectionChanged="OrganisationCollection_SelectionChanged"
                                RemainingItemsThresholdReachedCommand="{Binding GetMoreData}"
                                RemainingItemsThreshold="{Binding ItemTreshold}"
                                >
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,10,0,0"
                                  RowDefinitions="Auto">
                                    <Frame Style="{StaticResource BannerFrame}">
                                        <Grid RowDefinitions="Auto,Auto,*">
                                            <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto,Auto"
                                              Padding="20,0,20,0">
                                                <Grid Style="{StaticResource StarGridBackground}"
                                                  HorizontalOptions="Center">
                                                    <Grid Style="{StaticResource StarGrid}"
                                                      x:Name="Star"/>
                                                    <Image Style="{StaticResource StarRating}"/>
                                                </Grid>
                                                <Image Source="BankCard.png"
                                                   IsVisible="{Binding BankPayment}"
                                                   Style="{StaticResource BankCard}"
                                                   Grid.Column="1"/>
                                                <Image Source="Money.png"
                                                   IsVisible="{Binding CashPayment}"
                                                   Style="{StaticResource Money}"
                                                   Grid.Column="2"/>
                                                <Image Source="FoodTime.png"
                                                   Style="{StaticResource FoodTime}"
                                                   Grid.Column="3"/>
                                                <Label Text="{Binding Brand.DeliveryTime}"
                                                   Style="{StaticResource VerySmallOrangeLabel}"
                                                   Grid.Column="4"/>
                                                <Image Source="Discount.png"
                                                   IsVisible="{Binding Brand.HasDiscounts}"
                                                   Grid.Column="5"/>
                                            </Grid>
                                            <Grid Grid.Row="1"
                                              ColumnDefinitions="Auto,Auto"
                                              Padding="20,0,20,0">
                                                <Label Text="{Binding Brand.BrandName}"
                                                   Style="{StaticResource BlackLabel}"/>
                                                <Label Text="{Binding Tags}"
                                                   Style="{StaticResource SmallBlackLabel}"
                                                   Grid.Column="1"/>
                                            </Grid>
                                            <Grid Grid.Row="2"
                                              VerticalOptions="End">
                                                <Image Source="{Binding Banner}"
                                                   Style="{StaticResource BannerCompanyImage}"/>
                                                <Frame Style="{StaticResource LogoFrame}">
                                                    <Image Source="{Binding Logo}"
                                                       Style="{StaticResource LogoImage}"/>
                                                </Frame>
                                            </Grid>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>